# Configuración de la aplicación
APP_PORT=8001
DATA_SOURCE=json   # json|csv
DATA_DIR=app/infrastructure/data  # ruta a carpeta de datos

# Configuración de seguridad - API Keys
# Formato: API_KEY_NOMBRE=clave:rol
API_KEY_ADMIN=ml-api-key-admin-2024:admin
API_KEY_USER=ml-api-key-user-2024:user
API_KEY_READONLY=ml-api-key-readonly-2024:readonly

# API Key genérica para desarrollo (opcional)
X_API_KEY=ml-api-key-dev-2024:user

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuración de CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,POST
CORS_HEADERS=X-API-Key,Content-Type,Authorization
